class Book 
{
	int iBookId;
	String strName;
	String strAuthorName;
	float fPrice;

	Book()
	{
		iBookId=0;
		strName="";
		strAuthorName="";
		fPrice=0.0f;
		show();
	}
	Book(int ID,String n,String an,float p)
	{
		iBookId=ID;
		strName=n;
		strAuthorName=an;
		fPrice=p;
		this.show();
	}
	void show()
	{
		System.out.println("The Book ID IS:-"+iBookId);
		System.out.println("The Book Name Is:="+strName);
		System.out.println("The Book Author Name Is:-"+strAuthorName);
		System.out.println("The Book Price Is:-"+fPrice);
	}
	public static void main(String[] args) 
	{
		Book oB=new Book(11,"Wings Of Fire","A.P.J Abdul kalam",350);
		Book oB1=new Book(55,"The Great Maratha","Ranjit Desai",500);
		//oB.show();
		//System.out.println("Hello World!");
	}
}
